<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pinterest-like Image Gallery</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
    }

    header {
      background-color: #b04d42; /* Red background color */
      color: #df9aa9; /* White text color */
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 24px;
    }

    .navbar {
      display: flex;
      justify-content: flex-end;
    }

    .navbar a {
      color: #ead8d8; /* White text color */
      text-decoration: none;
      padding: 10px;
      font-weight: light;
    }

    .navbar a:hover {
      color: #ffffff; 
      background-color: #e65656; /* Darker red on hover */
      border-radius: 10px;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 16px;
      padding: 16px;
      justify-content: center;
    }

    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .gallery-item img {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .image-caption {
      padding: 10px;
      text-align: center;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <header>
    <div class="logo">Pinterest</div>
    <nav class="navbar">
      <a href="/profile">Home</a>
      <a href="/feed">Feed</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <div class="gallery">
    <% posts.forEach((post) => { %>
      
      <div class="gallery-item">
        
        <img src="images/uploads/<%= post.image %>" alt="<%= post.imageText %>">
        <div class="image-caption"><%= post.imageText %></div>
      </div>
    <% }) %>
  </div>

</body>
</html>
